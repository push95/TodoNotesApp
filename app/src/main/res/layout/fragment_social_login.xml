<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
     <import type="android.view.View"/>
        <variable
            name="socialLogin"
            type="com.example.todonotesapp.fragment.sociallogin.SocialLoginFragment" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="65dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context=".fragment.sociallogin.SocialLoginFragment">


            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"/>







        <TextView
            android:id="@+id/tv_awesome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/awesome"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorYellow3"
            android:textSize="@dimen/dimen17"/>

        <TextView
            android:id="@+id/awesome2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_started"
            android:textAllCaps="true"
            android:textSize="@dimen/dimen8"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/tv_awesome"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/dimen17"
            android:src="@drawable/blub_icon"
            app:layout_constraintTop_toBottomOf="@+id/awesome2"/>

        <TextView
            android:id="@+id/news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen14"
            android:layout_marginRight="@dimen/dimen14"
            android:layout_marginTop="@dimen/dimen10"
            android:text="@string/news_content"
            android:gravity="center"
            android:textSize="@dimen/dimen4"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:textColor="@color/colorGrey"/>


        <LinearLayout
            android:id="@+id/ll_fbook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/news_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="@dimen/dimen5"
            android:background="@drawable/drawable_fb">

            <ImageView
                android:id="@+id/fb"
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/facebook_logo"/>

            <View
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                />

            <TextView
                android:id="@+id/tv_fb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:gravity="center"
                android:text="@string/with_fb"
                android:paddingRight="@dimen/dimen11"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="@dimen/dimen6"
                app:layout_constraintTop_toBottomOf="@+id/logo" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_google"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_fbook"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="@dimen/dimen8"
            android:background="@drawable/draw_google">

            <ImageView
                android:id="@+id/iv_google"
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/google"/>

            <View
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:gravity="center"
                android:text="@string/with_google"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:paddingRight="@dimen/dimen11"
                android:textSize="@dimen/dimen6"
                app:layout_constraintTop_toBottomOf="@+id/logo" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_country_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="70dp"
            app:layout_constraintStart_toStartOf="@+id/ll_google"
            app:layout_constraintTop_toBottomOf="@+id/ll_google"
            android:layout_marginTop="@dimen/dimen10">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:ccp_showFlag="true"
                app:ccp_showPhoneCode="false"
                android:gravity="right"
                android:layout_marginLeft="@dimen/dimen20"
                app:ccp_areaCodeDetectedCountry="false"
                app:ccp_showFullName="false"
                app:ccp_showNameCode="false"
                app:ccp_showArrow="false"/>


            <!--<EditText
                android:id="@+id/et_country"
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="country"
                android:background="@null"
                android:layout_marginLeft="60dp"
                android:inputType="number"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textSize="@dimen/dimen4"
                />-->

            <EditText
                android:id="@+id/et_mobile"
                android:layout_weight=".8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Enter mobile number"
                android:inputType="number"
                android:background="@null"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textSize="@dimen/dimen4"
                />

            <!--<ImageView
                android:layout_weight=".15"
                android:layout_width="0dp"
                android:src="@drawable/selected"
                android:layout_marginRight="@dimen/dimen10"
                android:layout_height="40dp"
                android:id="@+id/btnNext"/>-->
        </LinearLayout>


        <TextView
            android:id="@+id/term_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_conditions"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen10"
            app:layout_constraintTop_toBottomOf="@+id/ll_country_code"
            android:layout_marginTop="@dimen/dimen6"/>


        <TextView
            android:id="@+id/skip_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:gravity="center"
            android:textColor="@color/colorFab"
            android:textSize="@dimen/dimen6"
            app:layout_constraintTop_toBottomOf="@+id/term_conditions"
            app:layout_constraintBottom_toTopOf="@+id/view1"
            android:layout_marginTop="@dimen/dimen6"/>

        <View
            android:id="@+id/view1"
            android:layout_width="75dp"
            android:layout_height="2dp"
            android:background="@color/colorFab"
            android:layout_marginBottom="@dimen/dimen3"
            app:layout_constraintLeft_toLeftOf="@+id/skip_login"
            app:layout_constraintEnd_toStartOf="@+id/skip_login"
            app:layout_constraintStart_toEndOf="@+id/skip_login"
            app:layout_constraintBottom_toTopOf="@+id/tv_dont_receive"
            />

        <TextView
            android:id="@+id/tv_dont_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_receive"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dimen4"
            app:layout_constraintBottom_toBottomOf="parent"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>
