    <LinearLayout
        android:id="@+id/ll_resendCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen10"
        app:layout_constraintLeft_toLeftOf="@+id/et_verifyOtp_dialog"
        app:layout_constraintTop_toBottomOf="@+id/et_verifyOtp_dialog">

        <TextView
            android:id="@+id/resendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend_otp"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:layout_marginTop="@dimen/dimen14"
            />

        <TextView
            android:id="@+id/OTPTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:layout_marginTop="@dimen/dimen14"
            android:layout_marginLeft="@dimen/dimen3"
            app:layout_constraintRight_toRightOf="@+id/resendCode"
            app:layout_constraintTop_toBottomOf="@+id/pinview"
            />


