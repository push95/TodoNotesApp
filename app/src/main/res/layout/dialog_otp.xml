   android:background="@drawable/drawable_otp">



    <TextView
        android:id="@+id/tv_otp_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/otp_content"
        android:textColor="@color/colorBlack"
        android:layout_margin="@dimen/dimen20"
        android:textAlignment="center"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_moblecontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen10"
        android:layout_marginLeft="@dimen/dimen10"
        android:layout_marginRight="@dimen/dimen5"
        app:layout_constraintLeft_toLeftOf="@+id/tv_otp_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_otp_content">
        <TextView
            android:id="@+id/tv_mobile_number"
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Mobile Number"
            android:textColor="@color/colorGrey"
            android:textStyle="bold"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/changeNumber"
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/change_number"
            android:textColor="@color/colorGrey"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintRight_toLeftOf="@+id/tv_otp_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_otp_content"
            />


    </LinearLayout>

