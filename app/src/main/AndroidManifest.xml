<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.todonotesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/todo_notes"
        android:label="@string/app_name"
        android:roundIcon="@drawable/todo_notes"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MvvmRetrofit.single_movie.SingleMovieActivity"></activity>
        <activity android:name=".activity.anotherExample.OTPActivity" />
        <activity android:name=".activity.anotherExample.Main2Activity" />
        <activity android:name=".activity.anotherExample.TabLayoutActivity" />
        <activity android:name=".activity.anotherExample.NavigationDrawerActivity"></activity>
        <activity android:name=".recyclerView_mvvm_livedata.RecyclerViewMvvmActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"
            tools:replace="android:value" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
    </application>

</manifest>